{
    "name": "huzaro/laravel-attributes",
    "description": "Flexible EAV (Entity–Attribute–Value) model for Laravel 10, 11, and 12.",
    "keywords": [
        "laravel",
        "attributes",
        "eav",
        "rinvex",
        "custom-fields"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Bart F",
            "email": "huzaro37512@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "illuminate/support": ">=9.0 <13.0",
        "illuminate/database": ">=9.0 <13.0",
        "illuminate/events": ">=9.0 <13.0",
        "illuminate/console": ">=9.0 <13.0",
        "symfony/http-foundation": "^6.0|^7.0",
        "opis/closure": "^3.6",
        "spatie/eloquent-sortable": "^4.0",
        "spatie/laravel-sluggable": "^3.6",
        "spatie/laravel-translatable": "^6.0",
        "watson/validating": "^8.0.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "orchestra/testbench": ">=8.0 <11.0"
    },
    "autoload": {
        "psr-4": {
            "Rinvex\\Attributes\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Rinvex\\Attributes\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Rinvex\\Attributes\\Providers\\AttributesServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
